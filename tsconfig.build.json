{
  "compilerOptions": {
    "outDir": "dist", // 生成目录
    "module": "esnext", // 格式
    "target": "es5", // 版本
    "declaration": true, // 为每一个 ts 文件生成 .d.ts 文件
    "jsx": "react-jsx",
    "moduleResolution": "Node", // 规定寻找引入文件的路径为 node 标准
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    // 要编译哪些文件
    "src"
  ],
  "exclude": [
    // 排除不需要编译的文件
    "src/**/*.test.tsx",
    "src/stories/*",
    "src/setupTests.ts",
    "src/react-app-env.d.ts",
    "src/reportWebVitals.ts"
  ]
}
